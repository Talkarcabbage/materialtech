{
  "schemaVersion": 1,
  "id": "materialtech",
  "version": "${version}",

  "name": "Material Tech",
  "description": "A mod about adding and using semi-dynamic materials for their varying properties to build things.",
  "authors": [
    "Talkarcabbage"
  ],
  "contact": {
    "homepage": "https://talkarcabbage.github.io/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "Rights Reserved, for now",
  "icon": "assets/materialtech/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "io.github.talkarcabbage.materialtech.MaterialTech"
      }
    ]
  },

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17",
    "fabric-language-kotlin": ">=1.7.0+kotlin.1.6.0"
  },
  "suggests": {
    "another-mod": "*"
  }
}
